{
  "manifest_version": 3,
  "name": "Text Sum Helper",
  "version": "1.1",
  "description": "Press Alt+S to sum selected numbers on any webpage (ignores date formats).",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "sum_selected_text": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Sum selected numeric values"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}